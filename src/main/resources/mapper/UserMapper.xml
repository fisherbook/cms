<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybtis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.stackoverflow.cms.dao.UserDAO">

    <resultMap id="baseMap" type="user">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="salt" column="salt"/>
        <result property="enabled" column="enabled"/>
        <result property="email" column="email"/>
        <result property="telephone" column="telephone"/>
    </resultMap>

    <select id="selectByPage" resultMap="baseMap" resultType="user">
        select * from user
        <where>
            <if test="searchMap != null">
                <if test="searchMap.username != null">
                    username = #{searchMap.username}
                </if>
                <if test="searchMap.enabled != null">
                    and enabled = #{searchMap.enabled}
                </if>
                <if test="searchMap.email != null">
                    and email = #{searchMap.email}
                </if>
                <if test="searchMap.telephone != null">
                    and telephone = #{searchMap.telephone}
                </if>
            </if>
        </where>
        order by #{order} #{sort} limit #{offset},#{limit}
    </select>

    <select id="selectByCondition" resultMap="baseMap" resultType="user">
        select * from user
        <where>
            <if test="username != null">
                username = #{username}
            </if>
            <if test="enabled != null">
                and enabled = #{enabled}
            </if>
            <if test="email != null">
                and email = #{email}
            </if>
            <if test="telephone != null">
                and telephone = #{telephone}
            </if>
        </where>
    </select>

    <select id="select" resultMap="baseMap" resultType="user">
        select * from user where id = #{id}
    </select>

    <insert id="insert" parameterType="user">
        insert into user (id,username,password,salt,email,telephone,enabled) values (#{id},#{name},#{password},#{salt},#{email},#{telephone},#{enabled})
    </insert>

    <insert id="batchInsert" parameterType="list">
        insert into user (id,username,password,salt,email,telephone,enabled)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.id},#{item.username},#{item.password},#{item.salt},#{item.email},#{item.telephone},#{item.enabled})
        </foreach>
    </insert>

    <delete id="delete" parameterType="string">
        delete from user where id = #{id}
    </delete>

    <delete id="batchDelete" parameterType="list">
        delete from user where id in
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="update" parameterType="user">
        update user
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="salt != null">
                salt = #{salt},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="telephone != null">
                telephone = #{telephone},
            </if>
            <if test="enabled != null">
                enabled = #{enabled}
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="batchUpdate" parameterType="list">
        <foreach collection="list" item="item" open="" close="" separator=";">
            update user
            <set>
                <if test="item.username != null">
                    username = #{item.username},
                </if>
                <if test="item.password != null">
                    password = #{item.password},
                </if>
                <if test="item.salt != null">
                    salt = #{item.salt},
                </if>
                <if test="item.email != null">
                    email = #{item.email},
                </if>
                <if test="item.telephone != null">
                    telephone = #{item.telephone},
                </if>
                <if test="item.enabled != null">
                    enabled = #{item.enabled}
                </if>
            </set>
            where id = #{item.id}
        </foreach>
    </update>

</mapper>